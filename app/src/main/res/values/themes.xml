<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bluejack_Pharmacy_Final_MCS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttons">
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="secondary_button" parent="buttons">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="subheading" parent="heading">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="icons">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="fill">
        <item name="android:fillColor">@color/black</item>
    </style>

    <style name="card">

    </style>

</resources>